/* pages/activityDetail/activityDetail.wxss */
page{
     height: 100%; 
    background: #F7F7FA;
}
.container{
    background: #fff;
    margin: 30rpx;
    padding-top: 80rpx;
    padding-bottom: 80rpx;
    margin-bottom: 40px;
}
.container .notice{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    
}
.container .notice view{
    color:#ff0000;
    font-family: '宋体';
    font-weight: bold;
    font-size:100rpx;
    /* margin-top: 80rpx; */
    
}
.container .notice text{
    font-size: 24rpx;
    margin-bottom: 20rpx;
}
.container .content{
    padding: 30rpx;
    /* border-top: 1rpx dotted red;
    border-bottom: 1rpx dotted red; */
    margin-bottom: 20rpx;
    
}
.container .content.border{
    border-top: 1rpx dotted red;
    border-bottom: 1rpx dotted red;
}
.container .content .wrap{
    height: 100%;
    position: relative;
}
.container .content .wrap .title{
    display: flex;
    justify-content: center;
    font-size: 50rpx;
    font-weight: bold;
}
.container .content .wrap .group-notice{
   white-space:pre-wrap
}
.container .content .wrap .other{
    position:absolute;
    bottom:0;
    right:0;
    font-size: 24rpx;
}
.container .content .wrap .other .author{
    text-align: right;
}
.container .publish{
    font-size: 24rpx;
    padding: 10rpx 20rpx;
    float: right;
    margin-right: 20rpx;
    color:#4D7698; 
    border: 1rpx solid #0072CA;
}
.container .footer{
    width: 100%;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #F56C64;
}
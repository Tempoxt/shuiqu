/* pages/publish/publish.wxss */
page{
    height: 100%; 
    background: #F7F7FA;
}
.container{
    height: 100%;
     margin:0 30rpx 40px 30rpx; 
}
.container input{
    height: 80rpx;
    padding-left: 20rpx;
    background: #fff;
    margin:20rpx 0;
    font-size: 32rpx;
}
.container .content{
    width: 100%;
    display: flex;
    background: #fff;
    margin-bottom: 20rpx;
    position: relative;
}
.container .content textarea{
    width: 100%;
    padding: 20rpx;
    font-size: 26rpx;
}
.container .content .len{
    position: absolute;
    bottom: 4rpx;
    right: 4rpx;
    font-size: 24rpx;
    color: #bbb;
}
.container .img-list{
}
.container .img-list .add-img{
    color: #bbb;
    background: #fff;
    width: 156rpx;
    height: 156rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    border:1rpx solid #ccc;
    margin-right: 0;
    margin-bottom: 20rpx;
    float: left;
}
.container .img-list .add-img .plus{
    font-size: 50rpx;
}
.container .img-list .upload-img{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    float: left;
    width: 156rpx;
    height: 156rpx;
    background: #fff;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    position: relative;
}
.container .img-list .upload-img:nth-of-type(4n){
    margin-right: 0;
}
.container .img-list .upload-img .img-item{
    width: 140rpx;
    height: 140rpx;
}
.container .img-list .upload-img .close{
    width:40rpx;
    height:40rpx;
    position:absolute;
    right:-10rpx;
    top:-10rpx;
}
.container .footer{
    width: 100%;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #ccc;
}
.container .footer.hasContent{
    background: #F56C64;
}
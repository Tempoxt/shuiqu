.modalWrap{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: 100;
}
.none{
    display: none;
}
.modalWrap .modal{
    width: 80%;
    margin-left: 10%;
    height: 480rpx;
    background: #fff; 
    position: absolute;
    top: 32%;
}
.modalWrap .modal .header{
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-bottom: 1rpx solid #eee;
}
.modalWrap .modal .header .choose-location{
    position: absolute;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    width: 150rpx;
    padding: 0 10rpx;
}
.modalWrap .modal .header .choose-location .city{
    width: 110rpx;
    text-align: center;  
    overflow: hidden;
    white-space: nowrap;
    text-overflow : ellipsis;
}
.modalWrap .modal .header .choose-location .arrow{
    width:30rpx;
    height:30rpx;
    margin-right: 20rpx; 
}
.modalWrap .modal .header .title{
    font-size: 30rpx;
}
.modalWrap .modal .header .close{
    width: 30rpx;
    height: 30rpx;
    /* line-height: 60rpx; */
   padding:0 20rpx;
    /* font-weight: normal; */
    position: absolute;
    right: 0rpx;
    top: 25rpx;
}
.modalWrap .modal .inputs{
    margin:40rpx 5% 20rpx 5%;
    font-size:30rpx;
}
.modalWrap .modal .inputs view{
    display: flex;
    align-items: center;
    height: 60rpx;
    border:1rpx solid #e0e0e0;
    padding-left:10rpx;
}
.modalWrap .modal .inputs view {
    margin-bottom: 20rpx;
}
.modalWrap .modal .inputs .validate .getCode{
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0;
    border:0 none;
    border-radius: 0;
    font-size: 24rpx;
     /* position: absolute;  */
    background-color: #FAD600;
}
.modalWrap .modal .inputs .validate .getCode::after{
    border:0 none;
}
.modalWrap .modal .inputs .validate input{
    flex: 1;
}
.modalWrap .modal .agree{
    font-size:26rpx;
    margin:0 5%;
    height:40rpx;
    display: flex;
    align-items: center;
}
.modalWrap .modal .agree image{
    width:40rpx;
    height:40rpx;
    padding-right: 10rpx;
}
.modalWrap .modal .agree view text{
    color:#0070C0;
    /* margin-left:10rpx; */
}
.modalWrap .modal .commit{
    background-color:#FAD600;
    height:60rpx;
    line-height:60rpx;
    padding:0;
    margin:0 5%;
    font-size:30rpx;
    position:absolute;
    width:90%;
    bottom:20rpx;
    border-radius: 0;
}
.modalWrap .modal .commit::after{
    border: 0;
}
.city-list .city-box{
    margin:0 20rpx 20rpx 20rpx;
}
.city-list .city-box .title-list-wrap .title{
    font-size: 32rpx;
}
.city-list .city-box .list-hot-city{
    margin:20rpx;
}
.city-list .city-box .list-hot-city text{
    border: 1rpx solid #E0E0E0;
    display: inline-block;
    border-radius: 10rpx;
    margin: 10rpx;
    color: #B4B4B4;
    padding: 6rpx 12rpx;
    font-size:30rpx;
}
.city-list .city-box .list-city{
    margin:0 20rpx 20rpx 20rpx;
}
.city-list .city-box .list-city .first-letter{
    display:block;
    width: 100%;
    height:60rpx;
    line-height: 60rpx;
    text-indent:20rpx;
}
.city-list .city-box .list-city .city-name{
    border: 1rpx solid #E0E0E0;
    display: inline-block;
    border-radius: 10rpx;
    margin: 10rpx;
    color: #B4B4B4;
    font-size:30rpx;
    padding: 6rpx 12rpx;
}

.city-list image{
    width:50rpx;
    height:50rpx;
    position:absolute;
    top: 0rpx;
    right:20rpx;
}
.city-show{
    display: block;
    background:#fff;
    width:100%;
    height:100%;
    position:absolute;
    top:0;
    z-index: 100;
}
.city-hide{
    display: none;
}
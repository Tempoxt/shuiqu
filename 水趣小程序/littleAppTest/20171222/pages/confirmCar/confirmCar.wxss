/* pages/confirmCar/confirmCar.wxss */
page{
    background-color: #eee;
}
 .container {
	margin-bottom: 120rpx;
} 

/*地址容器*/
.address-container {
	margin:40rpx 0 20rpx 0;
}

/*收货地址*/
.no-address {
    height: 150rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	background: white;
	position: relative;
    
}
/*地理定位图标*/
.no-address .location {
	width: 20px;
	height: 20px;
	margin-left: 10px;
}

.no-address .title {
	font-size: 14px;
    margin-left: 10px;
	flex: 8;
}
.has-address{
    height: 150rpx;
	display: flex;
	flex-direction: row;
	justify-content: flex-start; 
	align-items: center; 
	background: white;
	position: relative;
    font-size: 30rpx;
}
.has-address .info-box{
    flex: 1;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.has-address .info-box .username{
    margin-right:20rpx;
}
.has-address .user-address{
    display: flex;
    flex-wrap: wrap;
}
/*航邮花边*/
.mail {
    color: #AEAEAE;
    height: 20rpx; 
    background: url(http://7xlmry.com1.z0.glb.clouddn.com/add.png) bottom center repeat-x #fff;
}
/*箭头*/
.arrow {
	flex: 1;
    content: " ";
	height: 16rpx;
	width: 16rpx;
	border-width: 4rpx 4rpx 0 0;
	border-color: #ccc;
	border-style: solid;
	transform:rotate(45deg);
	position: absolute;
	margin-top: -8rpx;
	top: 50%;
	right: 30rpx;
}

/*支付方式*/
.pay-mode{
    margin-bottom:20rpx;
}
.pay-mode .title{
    padding:16rpx 20rpx;
    font-size:30rpx;
    background:#F4F4F4;
    border-top: 1rpx solid #E2E2E2;
    color:#616161;
}
.pay-mode .pay-box .payment-item{
    display:flex;
    justify-content:space-between;
    align-items:center;
    background:#fff;
    padding:16rpx 20rpx;
    border-bottom: 1rpx solid #E2E2E2;
}
.pay-mode .pay-box .payment-item .icon{
    width:56rpx;
    height:56rpx;
    margin-right:20rpx;
}
.pay-mode .pay-box .payment-item view{
    flex:1;
    display:flex;
    align-items:center;
    flex-direction:column;
}
.pay-mode .pay-box .payment-item text{
    font-size:32rpx;
}
.pay-mode .pay-box .payment-item view image{
    width:50rpx;
    height:50rpx;
    align-self:flex-end;
}
/*商品详情*/
.goods-detail{
    position:relative;
}
.goods-detail .title{
    padding:16rpx 20rpx;
    font-size:30rpx;
    background:#F4F4F4;
    border-top: 1rpx solid #E2E2E2;
    border-bottom: 1rpx solid #E2E2E2;
    color:#616161;
}
.goods-detail .goods-list .shop-info{
    height: 80rpx;
    padding: 0 20rpx;
    color:#3d4145;
    border-bottom: 1px solid #E9E9E9;
    font-size:28rpx;
    background:#fff;
    display: flex;
    align-items: center;
}
.goods-detail .goods-list .no-scope{
    position:absolute;
    right:40rpx;
    top:20rpx;
    z-index:200;
    width:200rpx;
    height:200rpx;
}
.goods-detail .goods-list .shop-info image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.goods-detail .goods-list .goods{
    position: relative;
    display:flex;
    padding:20rpx 0 20rpx 0;
    background:#fff;
    border-bottom: 1px solid #E9E9E9;
}
.goods-detail .goods-list .goods .fpid{
    width:100rpx;
    height:40rpx;
    position:absolute;
    left:0;
    top:0;
}
.goods-detail .goods-list .goods .good-img{
    width:120rpx;
    height:120rpx;
    margin-right:20rpx;
}
.goods-detail .goods-list .goods .desc{
    flex:3;
    display:flex;
    flex-direction:column;
    justify-content:space-between;
}
.goods-detail .goods-list .goods .desc .goods-name{
    font-size:30rpx;
}
.goods-detail .goods-list .goods .desc .goods-price{
    display:flex;
    align-items:center;
}
.goods-detail .goods-list .goods .desc .goods-price image{
    width:40rpx;
    height:40rpx;
    margin-right: 10rpx;
}
.goods-detail .goods-list .goods .desc .goods-price text{
    font-size:30rpx;
    color: #FD9841;
}
.goods-detail .goods-list .goods .desc .goods-price .no-cash{
    text-decoration: line-through;
}
.goods-detail .goods-list .goods .number-box{
    display:flex;
    align-items:flex-end;
    flex:1;
}
.goods-detail .goods-list .goods .number-box image{
    width:40rpx;
    height:40rpx;
    margin-right: 10rpx;
}
.goods-detail .goods-list .goods .number-box text{
    font-size:30rpx;
}
.other-info .activity-box{
    display:flex;
    justify-content:space-between;
    font-size:30rpx;
    padding:20rpx;
    background:#fff;
    border-bottom:1rpx solid #E9E9E9;
}
.other-info .time{
    display:flex;
    justify-content:space-between;
    font-size:30rpx;
    padding:20rpx;
    background:#fff;
    border-bottom:1rpx solid #E9E9E9;
}
.other-info .remark{
    width:90%;
    height:60rpx;
    background:#fff;
    font-size:30rpx;
    padding:20rpx 5%;
    border-bottom:1rpx solid #E9E9E9;
    position: static;
    z-index: 1;
}
.other-info .total{
    font-size:26rpx;
    background:#fff;
    height:60rpx;
    line-height: 60rpx;
    padding:20rpx 0;
    text-align: center;
}
.other-info .total text{
    color: #FD9841;
    font-weight: bold;
}
.footer-account-box{
    position: fixed;
    bottom: 0;
    height: 40px;
    width: 100%;
    display: flex;
    background-color: #fff;
     border-top: 1rpx solid #eee;
     z-index: 1000; 
    /* border-bottom: 1rpx solid #ccc; */
}
.footer-account-box .total-price{
    flex: 1;
    height: 100%;
    background: #fff;
    display: flex;
    align-items: center;
    padding-left: 20rpx; 
    font-size: 32rpx;
    position: relative;
    z-index:1001;
}
.footer-account-box .total-price text{
    color: #FD9841;
    font-weight: bold;
}
.footer-account-box .all-price-submit{
    background: #F9D52E;
    height: 100%;
    display: flex;
    align-items: center;
    width:30%;
    justify-content:center;
    color:#000;
    font-size:32rpx;

}
.footer-account-box .all-price-submit.no-submit{
    background-color: #ddd;
}

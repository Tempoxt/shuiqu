/* pages/selectShop/selectShop.wxss */
page{
    height: 100%;
    background: #eee;
    font-family: "Microsoft Yahei";
}
.container{
    height:100%;
    /* display:flex;
    flex-direction:column; */
}
.container .header{
    display: flex;
    align-items: center;
    margin-bottom:10rpx; 
    padding: 10rpx 30rpx;
    background-color: #fff;
}
.sug_info{
    background:#fff;
    position:absolute;
    width:100%;
    z-index:100;
}
.sug_info .sug_list{
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
}
.top-choose-location{
    display: flex;
    align-items: center;
    font-size: 26rpx;
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.top-choose-location text{
    width: 110rpx;
    text-align: center;  
    overflow: hidden;
    white-space: nowrap;
    text-overflow : ellipsis;
    /* margin-right: 10rpx; */
}
.top-choose-location image{
    width:30rpx;
    height:30rpx;
    margin-right: 20rpx; 
}
.search{
    flex: 1;
    background-color: #fff;
    height: 60rpx;
    line-height: 60rpx;
    display: flex;
    flex-wrap: nowrap;
    vertical-align: middle;
    align-items: center;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
}

.search icon{
    padding:14rpx 10rpx;
    width: 36rpx;
    height: 36rpx;
    /* position: absolute;
    right: 30rpx; */
}
.search input{
    flex: 1;
    vertical-align: middle;
    height: 60rpx;
    /* display: inline-block; */
    font-size: 26rpx;
    padding-left: 10rpx;
}
.location{
    display:flex;
    background:#fff;
    align-items:center;
    height:80rpx;
    margin-bottom:10rpx;
    padding: 0 30rpx;
    justify-content: space-between;
}
.location .select-here{
    width:60rpx;
    height:60rpx;
    /* margin-left:30rpx;
    margin-right:150rpx; */
}
.location text{
    font-size: 24rpx;
}
.location .location-again{
    border:0;
    font-size:24rpx;
    margin: 0;
    /* position: static; */
    /* position:absolute;
    left:auto;
    right:0rpx; */
    background:#EECE1F;
}
.shop-list .shop-item{
    display:flex;
    background-color:#fff;
    padding:10rpx;
    border-bottom:1rpx solid #eee;
}
.shop-list .shop-item .picture-img{
    width:150rpx;
    height:150rpx;
    margin-right: 10rpx;
}
.shop-list .shop-item .shop-detail{
    flex:1;
    display:flex;
    flex-direction:column;
    justify-content:center;
}
.shop-list .shop-item .shop-detail .shop-name{
    font-size:30rpx;
}
.shop-list .shop-item .shop-detail .level{
    height: 40rpx;
    display: flex;
    align-items: center;
}
.shop-list .shop-item .shop-detail .level image{
    width:30rpx;
    height:30rpx;
}
.shop-list .shop-item .shop-detail .dispatch-info{
    font-size:24rpx;
    color: #aaa;
}
.shop-list .shop-item .shop-detail .distance{
    display:flex;
    align-items:center;
}
.shop-list .shop-item .shop-detail .distance image{
    width:40rpx;
    height:40rpx;
}
.shop-list .shop-item .shop-detail .distance text{
    font-size:24rpx;
    color: #aaa;
}
.main{
    /* flex:1; */
     display:flex;
    justify-content:center;
    align-items:center;
    flex-direction:column;
    margin-top: 400rpx; 
    /* height: 100%; */
}
.main .no-shop-img{
    width:200rpx;
    height:200rpx;
     margin-top:-100rpx; 
}
.main text{
    text-align:center;
    font-size:30rpx;
    margin-top:20rpx;
    color:#999999;
}

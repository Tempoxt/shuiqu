.addAddress {
    position: fixed;
    height: 40px;
    line-height: 40px;
    bottom: 0;
    width: 100%;
    font-size: 32rpx;
    background: #EECE1F;
    text-align: center;
    z-index:10000;
}
.addAddress.cannot-add{
    background: #ddd;
     color:#aaa; 
}
.add {
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    color: #999;
    margin-bottom: 30rpx;
    border: 2rpx #ddd solid;
    border-radius: 8rpx;
    font-size: 80rpx;
}

.del {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    text-align: center;
    background: #333;
    color: white;
    padding: 40rpx 0;
}


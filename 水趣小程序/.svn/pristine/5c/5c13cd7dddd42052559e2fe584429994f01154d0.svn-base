/* pages/purchaseDetail/purchaseDetail.wxss */
/* pages/tuihuo/tuihuo.wxss */
page{
    height: 100%;
    background: #eee;
}
.container{
    
}
.container .explain{
    background: #fff;
    margin-bottom:20rpx;
}
.container .explain .title{
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    padding:20rpx 30rpx;
    font-size: 32rpx;
}
.container .explain .content{
    padding:20rpx 30rpx;
    font-size:26rpx;
}
.container .progress-detail{
    background: #fff;
    margin-bottom:20rpx;
    font-size: 32rpx;  
}
.container .progress-detail .title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}
.container .progress-detail .title image{
    width: 40rpx;
    height: 40rpx;
}
.container .progress-detail .detail .item{
    padding: 0 30rpx;
    font-size: 24rpx;
    display: flex;
    height: 60rpx;
    align-items: center;
}
.container .progress-detail .detail .item .line{
    width:20rpx;
    height: 100%;
    position:relative;
}
.container .progress-detail .detail .item .step{
    color: #898989;
}
.container .progress-detail .detail .item .line view{
    width:0rpx;
    border-left: 1px solid #ddd;
    height: 100%;
}
.container .progress-detail .detail .item .line text{
    position: absolute;
    top:50%;
    margin-top:-4px;
    left:0;
    margin-left: -3px;
    width: 0;
    height: 0;
    border:4px solid #ddd;
    border-radius:50%; 
}
.container .apply-type{
    background: #fff;
    margin-bottom:20rpx;
    font-size: 32rpx;
}
.container .apply-type .title{
    border-bottom: 1rpx solid #eee;
    padding:10rpx 30rpx;
}
.container .apply-type .select-box .tuihuo-type{
    display: flex;
    padding: 10rpx 30rpx;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}
.container .apply-reason{
    background: #fff;
    margin-bottom: 20rpx;
}
.container .apply-reason .title{
    padding:10rpx 30rpx;
    border-bottom: 1rpx solid #eee;
    font-size:32rpx;
}
.container .apply-reason .reason{
    padding:20rpx 30rpx;
    font-size: 26rpx;
    color: #898989;
}
.container .message{
    background: #fff;
    padding-bottom: 60rpx;
}
.container .message .title{
    font-size: 32rpx;
    padding:10rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}
.container .message .content{
    padding:10rpx 30rpx;
    font-size: 26rpx;
    color: #898989;
}

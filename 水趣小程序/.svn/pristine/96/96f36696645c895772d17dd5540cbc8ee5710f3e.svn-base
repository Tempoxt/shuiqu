/* pages/joinList/joinList.wxss */
page{
    height: 100%;
    background: #F7F7FA;
}
.container{
    margin-bottom: 50px;
}
.container .acticity{
    display: flex;
    flex-direction: column;
    background: #fff;
    margin: 20rpx;
    padding: 20rpx;
}
.container .acticity .title{
    font-size:32rpx;
    font-weight:bold;
}
.container .acticity .title .acticity-type{
    color: #f00;
}
.container .acticity .content{
    font-size: 28rpx;
    padding: 20rpx 0 40rpx 0;
    color: #94A2B3;
}
.container .acticity .info{
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #BEC6D0;
}
.container .footer{
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    width: 100%;
    height: 40px;
    background: #F56C64;
    color: #fff;
    bottom: 0;
    font-size: 32rpx;
}
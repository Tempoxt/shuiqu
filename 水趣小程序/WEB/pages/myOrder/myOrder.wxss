.swiper-box swiper-item .order-item .total .btn-box button::after{
    width: 0;
    height: 0;
}
.swiper-box swiper-item .order-item .item-header image{
    width:60rpx;
    height:60rpx;
    margin-right:20rpx;
    border-radius:50%;
}
.swiper-box swiper-item .order-item .item-header .shop-name{
    font-size:30rpx;
}
.swiper-box swiper-item .order-item .item-header .status{
    flex:1;
    display:flex;
    align-items:center;
    justify-content:flex-end;
}
.swiper-box swiper-item .order-item .item-header .status text{
    font-size:30rpx;
}
.swiper-box swiper-item .order-item .item-header  .navigator-arrow {
    padding-right: 26rpx;
    position: relative;
}
.swiper-box swiper-item .order-item .item-header .navigator-arrow:after {
    content: " ";
    display: inline-block;
    height: 18rpx;
    width: 18rpx;
    border-width: 2rpx 2rpx 0 0;
    border-color: #888;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 2rpx;
}

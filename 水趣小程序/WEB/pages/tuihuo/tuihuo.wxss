/* pages/tuihuo/tuihuo.wxss */
page{
    height: 100%;
    background: #eee;
}
.container{
    
}
.container .explain{
    background: #fff;
    margin-bottom:20rpx;
}
.container .explain .title{
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    padding:20rpx 30rpx;
    font-size: 32rpx;
}
.container .explain .content{
    padding:20rpx 30rpx;
    font-size:26rpx;
}
.container .apply-type{
    background: #fff;
    margin-bottom:20rpx;
    font-size: 32rpx;
}
.container .apply-type .title{
    border-bottom: 1rpx solid #eee;
    padding:20rpx 30rpx;
}
.container .apply-type .select-box .tuihuo-type{
    display: flex;
    padding: 10rpx 30rpx;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}
.container .apply-type .select-box .tuihuo-type image{
    width:50rpx;
    height:50rpx;
}
.container .apply-reason{
    background: #fff;
    margin-bottom: 20rpx;
}
.container .apply-reason .title{
    padding:20rpx 30rpx;
    border-bottom: 1rpx solid #eee;
    font-size:32rpx;
}
.container .apply-reason .reason{
    padding:20rpx 30rpx;
}
.container .apply-reason .reason picker{
    border: 1rpx solid #bbb;
    font-size: 32rpx;
    padding:4rpx 10rpx;
}
.container .message{
    background: #fff;
}
.container .message .title{
    font-size: 32rpx;
    padding:10rpx 30rpx;
}
.container .message .content{
    
    padding:0 36rpx 30rpx 36rpx;
    
}
.container .message .content textarea{
    width: 100%;
    height: 200rpx;
    border: 1rpx solid #eee;
    font-size: 26rpx;
    padding-left: 6rpx;
    padding-top: 6rpx;
}
.container .btn-box{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
}
.container .footer{
    flex: 1;
    color: #fff;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    border-radius: 40px;
}
.container .footer.theme1{
    background: linear-gradient(to right,#F6CC47,#FFAD52);
}
.container .footer.theme2{
    background:linear-gradient(to right,#7b00d3,#b25aff);
}
.container .footer.theme3{
    background:linear-gradient(to right,#cf1731,#ff4060);
}
.container .footer.theme4{
    background:linear-gradient(to right,#15a0ff,#3ebaff);
}
.container .footer.theme5{
    background:linear-gradient(to right,#2cc136,#5de04f);
}

/* pages/myTicket/myTicket.wxss */
.swiper-tab{ 
  width: 100%; 
  text-align: center;
  height: 40px; 
  line-height: 40px;
  display: flex;
} 
.swiper-tab-item{ 
    font-size: 30rpx; 
    flex: 1;
    width: 50%; 
    color: #4d555d;
    
} 
.on{
  color: #000; 
  font-weight: bold; 
} 
.on.theme1{
    border-bottom: 2px solid #F8D32F;
}
.on.theme2{
    border-bottom: 2px solid #7b00d3;
}
.on.theme3{
    border-bottom: 2px solid #ff4060;
}
.on.theme4{
    border-bottom: 2px solid #3ebaff ;
}
.on.theme5{
    border-bottom: 2px solid #5de04f;
}     
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden;background-color: #eee; } 
.swiper-box .header{ 
  /* text-align: center;  */
  display: flex;
  font-size: 30rpx;
  justify-content: center;
  padding:10rpx 0;
} 
.swiper-box .header .info .red{
    color:red;
}
.swiper-box .content .item{
    display:flex;
    width:100%;
    height:250rpx;
    background:#fff;
    
    justify-content:flex-end;
    font-size:24rpx;
    margin-bottom:10rpx;
}

.swiper-box .content .item .item-detail{
    flex:1;
    display:flex;
    justify-content:space-between;
    align-items:center;
    padding:0 40rpx;
}
.swiper-box .content .item .item-detail .info{
    flex:1;
    display:flex;
    flex-direction:column;
    justify-content:center;
}
.swiper-box .content .item .item-detail .info .title{
    font-size:30rpx;
    font-weight:bold;
}
.swiper-box .content .item .item-detail image{
    width:120rpx;
    height:120rpx;
}
.swiper-box .content .item .to-use{
    display:flex;
    width:10%;
    height:100%;
    justify-content:center;
    align-items:center;
    flex-direction:column;
    flex-wrap:wrap;
    font-size:30rpx;
}
.swiper-box .content .item .to-use.theme1{
    background:#F9D603;
}
.swiper-box .content .item .to-use.theme2{
    background:#7b00d3;
    color: #fff;
}
.swiper-box .content .item .to-use.theme3{
    background:#ff4060;
    color: #fff;
}
.swiper-box .content .item .to-use.theme4{
    background:#3ebaff;
    color: #fff;
}
.swiper-box .content .item .to-use.theme5{
    background:#5de04f;
    color: #fff;
}
.swiper-box .content .item .to-use .arrow{
    width:30rpx;
    height:30rpx;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>添加提现账号</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <link rel="shortcut icon" href="/favicon.ico">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link rel="stylesheet" href="./css/sm.min.css">
    <link rel="stylesheet" href="./css/sm-extend.min.css">
    <link rel="stylesheet" href="./css/shop.css">
</head>
<body>
	<div class="page-group">
		<div class="page page-finish page-current">
			<header class="bar bar-nav light-nav">
	            <a href="/weixin/everyShop" class="icon icon-35icoback pull-left"></a>  
	            <h1 class="title">添加提现账号</h1>
	        </header>
	        <div class="content content-addCash">
	        	<table>
	                <tr>
	                    <td>
	                        <label class="label-checkbox">
	                            <input type="radio" value="1" name="default" checked/>
	                            <div class="item-media"><i class="icon icon-form-checkbox"></i></div>
	                            
	                        </label><i class="icon icon-49zhifubao"></i>支付宝
	                    </td>
	                    <td>
	                        <label class="label-checkbox">
	                            <input type="radio" value="2" name="default" class="cur"/>
	                            <div class="item-media"><i class="icon icon-form-checkbox"></i></div>

	                        </label><svg class="icon icon-svg" aria-hidden="true">
				                <use xlink:href="#icon-yinhang"></use>
				            </svg></i>银行卡
	                    </td>
	                </tr>
	            </table>
	            <div class="list-block new-form-list">
				  <ul>
				    <li>
				      <div class="item-content">
				        <div class="item-inner">
				          <div class="item-title label">账号：</div>
				          <div class="item-input">
				            <input type="text" name="zhifubaoNumber" placeholder="您的支付宝账号"></div>
				        </div>
				      </div>
				    </li>
				    <li>
				      <div class="item-content">
				        <div class="item-inner">
				          <div class="item-title label">姓名：</div>
				          <div class="item-input">
				            <input type="text" name="zhifubaoName" placeholder="您的真实姓名"></div>
				        </div>
				      </div>
				    </li>
				  </ul>
				  <ul style="display:none;">
				    <li>
				      <div class="item-content">
				        <div class="item-inner">
				          <div class="item-title label">账号：</div>
				          <div class="item-input">
				            <input type="text" name="yinhangNumber" placeholder="您的银行卡号"></div>
				        </div>
				      </div>
				    </li>
				    <li>
				      <div class="item-content">
				        <div class="item-inner">
				          <div class="item-title label">姓名：</div>
				          <div class="item-input">
				            <input type="text" name="yinhangName" placeholder="您的真实姓名"></div>
				        </div>
				      </div>
				    </li>
				    <li>
				      <div class="item-content">
				        <div class="item-inner">
				          <div class="item-title label">银行：</div>
				          <div class="item-input">
				            <input type="text" name="kaihuhang" placeholder="您的开户银行"></div>
				        </div>
				      </div>
				    </li>
				  </ul>
				  <p>
				    <a href="#" class="button button-fill btn-yello">确认提交</a></p>
				</div>
	        </div>
	        
	    </div>
	</div>
	<script type='text/javascript' src='js/common/zepto.min.js' charset='utf-8'></script>
    <script type='text/javascript' src='js/common/sm.min.js' charset='utf-8'></script>
    <script type='text/javascript' src='js/common/sm-extend.min.js' charset='utf-8'></script>
    <script type='text/javascript' src='js/common/handlebars-v4.0.5.js'></script>
    <script src="./css/iconfont.js"></script>
    <script>
        $(function() {
        	var zhifubao = $(".new-form-list ul:nth-of-type(1)");
        	var yinhangka = $(".new-form-list ul:nth-of-type(2)");
            $("input[name='default']").on('change',function(){

            	var curVal = $(this).val();
            	if(curVal==1){
            		zhifubao.show();
            		yinhangka.hide();
            	}else if(curVal==2){
            		zhifubao.hide();
            		yinhangka.show();
            	}
            	
            	
            });
            // $("#yinhang").click(function(){
            // 	debugger;
            // 	$(".new-form-list ul:nth-of-type(2)").css("display","block");
            // 	$(".new-form-list ul:nth-of-type(1)").css("display","none");
            // });
          		
        });
        $.init();
    </script>
</body>
</html>
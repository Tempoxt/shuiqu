<script id="tishi" type="text/x-handlebars-template">         
    <p>{{data.activity.activityRemark}}</p>
    <!-- <p>2、请在活动时间范围内使用此劵</p>
    <p>3、此劵领取后在我的优惠券中查看</p>
    <p>4、此劵解释权归水趣生活所有</p> -->
</script>
    <!-- <script type='text/javascript' src='/files/common/js/sm.min.js' charset='utf-8'></script>
    <script type='text/javascript' src='/files/common/js/sm-extend.min.js' charset='utf-8'></script> -->
<script>
    $(function() {
        $('[data-action="get-code"]').on('click', function(){
                var code_no = $('input[name=code_no]').val();
                if(!$.trim(code_no)){
                    $.alert('优惠券编码不能为空');
                    return;
                }
                $.ajax({
                    type: "get",
                    url: "/weixin/imaCouponConvert",
                    data:{
                        code_no:code_no,
                        activityId:data2.data.activity.activityId
                    },
                    dataType: 'json',
                    complete: function(json) {
                      
                        var data = json.response;
                        var status = json.status;
                        if(status != 200){
                            $.alert('网络异常，状态为15.1' + status);
                            return;
                        }
                        if ($.type(data) == 'string') {
                            data = JSON.parse(data);
                        }
                        if(data.code != 'E00000'){
                            if(data.code == "-1"){
                                window.location.href = "/weixin/bind";
                            }else{
                                $.alert(data.message);
                                $('input[name=code_no]').val("");
                                return;
                            }
                        }else{
                            $.alert('恭喜兑换成功！', function(){
                                window.location.href = "/weixin/home";
                            });
                        }
                        
                    }
                });
        });

            var tpl = $("#swiper").html();
            var template = Handlebars.compile(tpl);
            var context = {
                data: data2.data
            };
            var html = template(context);
            $("[data-role='swiper-wrap']").html(html);

            $("#swiper-container").swiper({
                autoplay: 2000,
                autoplayDisableOnInteraction: false,
                pagination: '.swiper-pagination'
            });

            // $.reinitSwiper(0);
            $.reinitSwiper('#swiper-container');

            var tpl2 = $("#tishi").html();
            var template2 = Handlebars.compile(tpl2);
            var context2 = {
                data: data2.data
            };
            var html2 = template2(context2);
            $(".notice").append(html2);

    });
    $.init();
</script>
</body>

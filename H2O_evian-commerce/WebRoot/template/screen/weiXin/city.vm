        if($('[data-role="street"]').html()!=""){
            $('[data-role="street"]').click(function(){
                //code是城市id
                var code = $(this).data('code');
                var loc = $(this).data('loc');
                if(code || code == 0){
                    //保存城市
                    saveCity(code,loc);

           });
       //定位当前位置
       
       $('[data-role="location"]').on('click',function(e){
            e.preventDefault();
            // debugger;
            locationFlag++;
            console.log(locationFlag);
            // console.log(locationFlag);
            if(locationFlag>1){
                return;
                
            }
